generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Prayers {
  id      Int     @id @unique() @default(autoincrement())
  name    String? @db.Text
  content String  @db.Text
  count   Int     @default(0)
  prayers User[]
}

model User {
  id            Int         @id @unique() @default(autoincrement())
  name          String
  prayersPrayed Prayers[]
  takeaways     Takeaways[]
}

model Schedules {
  id            Int      @id @unique() @default(autoincrement())
  title         String   @db.Text
  date          DateTime @db.DateTime(0)
  speaker       String   @db.Text
  bibleVerse    String   @db.Text
  summary       String   @db.Text
  liturgos      String?  @db.Text
  musician      String?  @db.Text
  multimedia    String?  @db.Text
  accommodation String?  @db.Text
  cookingGroup  String?  @db.Text
  cleaningGroup String   @db.Text
}

model Takeaways {
  id           Int      @id @unique() @default(autoincrement())
  takeawayId   String   @db.Text
  title        String   @db.Text
  date         DateTime @db.DateTime(0)
  speaker      String   @db.Text
  bibleVerse   String   @db.Text
  summary      String   @db.Text
  contributors User[]
}

model Todos {
  id      Int     @id @unique() @default(autoincrement())
  content String? @db.Text
  done    Int?
}
